# TO EDIT:
# - /PATH/TO -> your absolute path
# - sandboxXYZ -> your domain
# - CLIENTIP -> your client's dynamically generated IP

Host bastion
	User ec2-user
	HostName bastion.sandboxXYZ.opentlc.com
	IdentityFile /PATH/TO/ocp_ingress/demo/aws/secrets/key-aws-demo.pem

Host client
	User ec2-user
	HostName CLIENTIP
	StrictHostKeyChecking no
	IdentityFile /PATH/TO/ocp_ingress/demo/aws/secrets/key-aws-demo.pem
	ProxyCommand ssh -i /PATH/TO/ocp_ingress/demo/aws/secrets/key-aws-demo.pem -p 22 -W %h:%p -o StrictHostKeyChecking=no -q ec2-user@bastion

Host router
	User ec2-user
	HostName 10.0.0.96
	StrictHostKeyChecking no
	IdentityFile /PATH/TO/ocp_ingress/demo/aws/secrets/key-aws-demo.pem
	ProxyCommand ssh -i /PATH/TO/ocp_ingress/demo/aws/secrets/key-aws-demo.pem -p 22 -W %h:%p -o StrictHostKeyChecking=no -q ec2-user@bastion

